//nested-if-else
int main()
{
	int y;
	printf("Enter the year :");
	scanf("%d",&y);
	if(y%4==0)
	{
		printf("\n;eap year");
		if(y%100!=0)
			printf("\nleap year");
		if(y%400==0)
			printf("\nleap year");
	}
	else	
		printf("\n not a leap year ");
	return 0;
}
