//taylor series
#include<stdio.h>
#include<math.h>
int main()
{
	int i,temp;
	float term,x,d,sine=0;
	printf("Enter the value of x : ");
	scanf("%f",&x);
	temp=x;
	x=x*(3.14/180);            //converting into radians
	term=x;
	sine=term;
	i=1;
	do
	{
		d=2*i*(2*i+1);           //calculating the denominators
		term=-term*x*x/d;        //combing values to make a term
		sine+=term;              //adding the terms to form series   
		i+=1;
	}while(term>0.0000001);
	printf("\nThe value calculated is%f \n",sine);
	printf("\nThe sine function is %f",sin(x));
	return 0;
}
